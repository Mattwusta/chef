<center><div class="page-header">
   <font color="gray" size ="6" face = "Baskerville Old Face">與我們一起探索誰是美食的主廚之星！</font>
          <font color = "white" style="padding-left:60px;" > <%= link_to '註冊', new_user_registration_path, class: "btn btn-large
   btn-primary" %></font>
        </font>
  </center>


<font color="gray" size ="5" face = "Baskerville Old Face">新會員註冊</font>
<br><br>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :image_file_size, class: "alert alert-error" %>
    <%= f.full_error :image_content_type, class: "alert alert-error" %>
    <%= f.input :image, label: "請上傳大頭照" %>

  	<%= f.input :name, :required => true, :autofocus => true %>
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :phone, label: "聯絡電話" %>
    <%= f.input :address, label: "送餐地址" %>
    <%= f.input :password, :required => true %>
  


  <div class="form-actions">
    <%= f.button :submit, "註冊" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
